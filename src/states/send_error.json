{
  "SendError": {
    "Type": "Task",
    "Resource": "arn:aws:states:::http:invoke",
    "Parameters": {
      "ApiEndpoint": "https://${api_endpoint}/api/latest/ocean/error",
      "Method": "POST",
      "Authentication": {
        "ConnectionArn": "${api_authorization}"
      },
      "RequestBody": {
        "requestId.$": "$.requestId",
        "error.$": "$.error"
      }
    },
    "Retry": [
      {
        "ErrorEquals": [
          "States.ALL"
        ],
        "BackoffRate": 2,
        "IntervalSeconds": 1,
        "MaxAttempts": 3,
        "JitterStrategy": "FULL"
      }
    ],
    "ResultPath": null,
    "End": true
  }
}
